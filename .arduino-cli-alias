## arduino-cli
alias arduino-cli='~/bin/arduino-cli'

alias esp32-compile='arduino-cli compile --fqbn esp32:esp32:esp32 --warnings all'
alias esp32-upload='echo "use -p /dev/ttyUSB* to specify port" && arduino-cli upload --fqbn esp32:esp32:esp32 --verify'

alias esp8266-compile='arduino-cli compile --fqbn esp8266:esp8266:generic --warnings all'
alias esp8266-upload='echo "use -p /dev/ttyUSB* to specify port" && arduino-cli upload --fqbn esp8266:esp8266:generic --verify'

alias pico-compile='arduino-cli compile --fqbn rp2040:rp2040:rpipico --warnings all'
alias pico-upload='echo "use -p /dev/ttyACM* to specify port" && arduino-cli upload --fqbn rp2040:rp2040:rpipico --verify'