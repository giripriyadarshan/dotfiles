# Custom aliases

## Directories listing
alias lg='exa --group-directories-first'
alias lgo='exa --group-directories-first --oneline'
alias lgt='exa --group-directories-first --tree --long --header'
alias lls='exa --group-directories-first --header --long'
alias usb='lls /dev/ttyUSB* || lls /dev/ttyACM*'

## apt update
alias upgrade='sudo apt update && sudo apt upgrade'
alias update='sudo apt update'
alias in='sudo apt install'
alias ulist='sudo apt list --upgradable'

## init shells
alias run='chmod +x'

## custom build envs
alias cargos='cargo install --list'
alias idf-path='source "$HOME/esp/esp-idf/export.sh"'

## find shortcuts using ripgrep
alias aliases='rg alias ${HOME}/.aliases'
alias paths='rg export ${HOME}/.aliases'

# Custom paths/exports
source "$HOME/.cargo/env"

## RPi Pico SDK Development variables
export PICO_SDK_PATH=/home/work/pico-setup/pico/pico-sdk
export PICO_EXAMPLES_PATH=/home/work/pico-setup/pico/pico-examples
export PICO_EXTRAS_PATH=/home/work/pico-setup/pico/pico-extras
export PICO_PLAYGROUND_PATH=/home/work/pico-setup/pico/pico-playground
